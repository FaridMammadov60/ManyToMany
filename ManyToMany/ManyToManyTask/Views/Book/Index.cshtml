<div class="row">
 
        <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Category Table</h4>
                  <p class="card-description">
                    <a class="btn btn-success" asp-action="create"> add book</a>
                  </p>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Image</th>
                          <th>Name</th>
                          <th>Author Name</th>
                          <th>Author Sosial Accaunt</th>
                          <th>Genre Name</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                            count++;

                            <tr>
                              <td>@count</td>
                              <td>@foreach (var image in item.Images)
                                {
                                            @if (image.IsMain)
                                            {
                                              <img  width=100 src="~/img/@image.ImageUrl"/> 
                                            }
                                }
                               </td>  
                              <td>@item.Name</td>
                              <td>@foreach (var authors in item.BookAuthors)
                                {
                                    @authors.Author.Name;
                                }
                              </td>
                               <td>@foreach (var authors in item.BookAuthors)
                                {
                                   @authors.Author.SocialAccount.Instagram
                                }
                              </td>
                               <td>@foreach (var genres in item.BookGenres)
                                {
                                    @genres.Genre.Name;
                                }
                              </td>
                              <td>
                                  <a class="btn btn-secondary" asp-action="update" asp-route-id="@item.Id"> upt </a>
                                   <a class="btn btn-primary" asp-action="detail" asp-route-id="@item.Id">det</a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">del></a>
                             </td>
                         </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
</div>